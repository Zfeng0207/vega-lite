{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "background": "white",
  "padding": 5,
  "width": 950,
  "height": 520,
  "title": {
    "text": "Malaysia Economic Landscape â€” Participation, Population & GDP by State",
    "anchor": "start",
    "fontSize": 18
  },
  "style": "cell",
  "data": [
    {
      "name": "source_1",
      "url": "https://raw.githubusercontent.com/Zfeng0207/vega-lite/refs/heads/main/data/lfs_state_sex_cleaned.csv",
      "format": {"type": "csv", "delimiter": ","}
    },
    {
      "name": "source_2",
      "url": "https://raw.githubusercontent.com/Zfeng0207/vega-lite/refs/heads/main/data/gdp_cleaned.csv",
      "format": {"type": "csv", "delimiter": ","}
    },
    {
      "name": "source_0",
      "url": "https://raw.githubusercontent.com/Zfeng0207/vega-lite/refs/heads/main/data/population_state.csv",
      "format": {
        "type": "csv",
        "parse": {"date": "date", "population": "number"},
        "delimiter": ","
      },
      "transform": [
        {"type": "formula", "expr": "year(datum.date)", "as": "year"},
        {"type": "filter", "expr": "datum.year == 2022"},
        {
          "type": "filter",
          "expr": "datum.sex == 'both' && datum.age == 'overall' && datum.ethnicity == 'overall'"
        },
        {
          "type": "lookup",
          "from": "source_1",
          "key": "state",
          "fields": ["state"],
          "values": ["p_rate"],
          "as": ["p_rate"]
        },
        {
          "type": "lookup",
          "from": "source_2",
          "key": "state",
          "fields": ["state"],
          "values": ["value rm million"],
          "as": ["gdp"]
        },
        {
          "type": "filter",
          "expr": "isValid(datum.p_rate) && isValid(datum.gdp)"
        }
      ]
    },
    {
      "name": "data_0",
      "source": "source_0",
      "transform": [
        {
          "type": "filter",
          "expr": "isValid(datum[\"p_rate\"]) && isFinite(+datum[\"p_rate\"]) && isValid(datum[\"population\"]) && isFinite(+datum[\"population\"]) && isValid(datum[\"gdp\"]) && isFinite(+datum[\"gdp\"])"
        }
      ]
    },
    {
      "name": "data_1",
      "source": "source_0",
      "transform": [
        {
          "type": "filter",
          "expr": "isValid(datum[\"p_rate\"]) && isFinite(+datum[\"p_rate\"]) && isValid(datum[\"population\"]) && isFinite(+datum[\"population\"])"
        }
      ]
    }
  ],
  "marks": [
    {
      "name": "layer_0_marks",
      "type": "symbol",
      "style": ["circle"],
      "from": {"data": "data_0"},
      "encode": {
        "update": {
          "opacity": {"value": 0.9},
          "stroke": {"value": "white"},
          "strokeWidth": {"value": 0.8},
          "fill": {"scale": "color", "field": "state"},
          "tooltip": {
            "signal": "{\"State\": isValid(datum[\"state\"]) ? datum[\"state\"] : \"\"+datum[\"state\"], \"Participation (%)\": format(datum[\"p_rate\"], \".1f\"), \"Population (k)\": format(datum[\"population\"], \".1f\"), \"GDP (RM mil)\": format(datum[\"gdp\"], \",.0f\")}"
          },
          "ariaRoleDescription": {"value": "circle"},
          "description": {
            "signal": "\"Participation Rate (%): \" + (format(datum[\"p_rate\"], \"\")) + \"; Population (thousand): \" + (format(datum[\"population\"], \"\")) + \"; State: \" + (isValid(datum[\"state\"]) ? datum[\"state\"] : \"\"+datum[\"state\"]) + \"; GDP (RM million): \" + (format(datum[\"gdp\"], \".2s\")) + \"; Participation (%): \" + (format(datum[\"p_rate\"], \".1f\")) + \"; Population (k): \" + (format(datum[\"population\"], \".1f\")) + \"; GDP (RM mil): \" + (format(datum[\"gdp\"], \",.0f\"))"
          },
          "x": {"scale": "x", "field": "p_rate"},
          "y": {"scale": "y", "field": "population"},
          "size": {"scale": "size", "field": "gdp"},
          "shape": {"value": "circle"}
        }
      }
    },
    {
      "name": "layer_1_marks",
      "type": "text",
      "style": ["text"],
      "from": {"data": "data_1"},
      "encode": {
        "update": {
          "align": {"value": "center"},
          "dy": {"value": -10},
          "fontSize": {"value": 11},
          "fontWeight": {"value": "bold"},
          "fill": {"value": "black"},
          "description": {
            "signal": "\"p_rate: \" + (format(datum[\"p_rate\"], \"\")) + \"; population: \" + (format(datum[\"population\"], \"\")) + \"; state: \" + (isValid(datum[\"state\"]) ? datum[\"state\"] : \"\"+datum[\"state\"])"
          },
          "x": {"scale": "x", "field": "p_rate"},
          "y": {"scale": "y", "field": "population"},
          "text": {"signal": "isValid(datum[\"state\"]) ? datum[\"state\"] : \"\"+datum[\"state\"]"},
          "baseline": {"value": "middle"}
        }
      }
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "linear",
      "domain": [44, 96],
      "range": [0, {"signal": "width"}],
      "nice": true,
      "zero": false
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "fields": [
          {"data": "data_0", "field": "population"},
          {"data": "data_1", "field": "population"}
        ]
      },
      "range": [{"signal": "height"}, 0],
      "nice": true,
      "zero": true
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {"data": "data_0", "field": "state", "sort": true},
      "range": [
        "#0077BB", "#33BBEE", "#009988", "#EE7733", "#CC3311",
        "#EE3377", "#4477AA", "#66CCEE", "#228833", "#CCBB44",
        "#EE6677", "#AA3377", "#88CCEE", "#44AA99", "#117733",
        "#999933", "#DDCC77", "#CC6677", "#882255", "#AA4499"
      ]
    },
    {
      "name": "size",
      "type": "sqrt",
      "domain": {"data": "data_0", "field": "gdp"},
      "range": [20, 1800],
      "zero": true
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "grid": true,
      "gridScale": "y",
      "tickCount": {"signal": "ceil(width/40)"},
      "domain": false,
      "labels": false,
      "aria": false,
      "maxExtent": 0,
      "minExtent": 0,
      "ticks": false,
      "zindex": 0
    },
    {
      "scale": "y",
      "orient": "left",
      "grid": true,
      "gridScale": "x",
      "tickCount": {"signal": "ceil(height/40)"},
      "domain": false,
      "labels": false,
      "aria": false,
      "maxExtent": 0,
      "minExtent": 0,
      "ticks": false,
      "zindex": 0
    },
    {
      "scale": "x",
      "orient": "bottom",
      "grid": false,
      "title": "Participation Rate (%)",
      "labelFlush": true,
      "labelOverlap": true,
      "tickCount": {"signal": "ceil(width/40)"},
      "zindex": 0
    },
    {
      "scale": "y",
      "orient": "left",
      "grid": false,
      "title": "Population (thousand)",
      "labelOverlap": true,
      "tickCount": {"signal": "ceil(height/40)"},
      "zindex": 0
    }
  ],
  "legends": [
    {
      "title": "State",
      "fill": "color",
      "symbolType": "circle",
      "encode": {
        "symbols": {
          "update": {"stroke": {"value": "white"}, "opacity": {"value": 0.9}}
        }
      }
    },
    {
      "format": ".2s",
      "title": "GDP (RM million)",
      "size": "size",
      "symbolType": "circle",
      "encode": {
        "symbols": {
          "update": {
            "fill": {"value": "black"},
            "stroke": {"value": "white"},
            "fillOpacity": {"value": 0.9},
            "opacity": {"value": 0.9}
          }
        }
      }
    }
  ],
  "config": {
    "axis": {"labelFontSize": 11, "titleFontSize": 13},
    "legend": {"labelFontSize": 11, "titleFontSize": 12},
    "style": {"cell": {"stroke": null}}
  }
}
