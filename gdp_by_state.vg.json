{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "background": "white",
  "padding": 5,
  "width": 850,
  "height": 550,
  "title": {
    "text": "GDP by State and Kind of Economic Activity (RM Million)",
    "frame": "group"
  },
  "style": "cell",
  "data": [
    {
      "name": "source_0",
      "url": "https://raw.githubusercontent.com/Zfeng0207/vega-lite/refs/heads/main/data/gdp_cleaned.csv",
      "format": {
        "type": "csv",
        "parse": {"year": "number", "value rm million": "number"},
        "delimiter": ","
      },
      "transform": [
        {"type": "filter", "expr": "datum.year == year_select"},
        {
          "type": "filter",
          "expr": "isValid(datum['value rm million']) && isFinite(+datum['value rm million'])"
        },
        {
          "type": "filter",
          "expr": "isValid(datum.state) && isValid(datum['kind of economic activity'])"
        }
      ]
    },
    {
      "name": "data_0",
      "source": "source_0",
      "transform": [
        {
          "type": "aggregate",
          "groupby": ["state", "kind of economic activity", "year"],
          "ops": ["sum"],
          "fields": ["value rm million"],
          "as": ["sum_value rm million"]
        },
        {
          "type": "stack",
          "groupby": ["state"],
          "field": "sum_value rm million",
          "sort": {"field": ["sum_value rm million"], "order": ["descending"]},
          "as": ["sum_value rm million_start", "sum_value rm million_end"],
          "offset": "zero"
        },
        {
          "type": "filter",
          "expr": "isValid(datum[\"sum_value rm million\"]) && isFinite(+datum[\"sum_value rm million\"])"
        }
      ]
    }
  ],
  "signals": [
    {
      "name": "year_select",
      "value": 2022,
      "bind": {
        "input": "range",
        "min": 2019,
        "max": 2022,
        "step": 1,
        "name": "Year: "
      }
    }
  ],
  "marks": [
    {
      "name": "marks",
      "type": "rect",
      "style": ["bar"],
      "from": {"data": "data_0"},
      "encode": {
        "update": {
          "fill": {"scale": "color", "field": "kind of economic activity"},
          "tooltip": {
            "signal": "{\"State\": isValid(datum[\"state\"]) ? datum[\"state\"] : \"\"+datum[\"state\"], \"Kind of Activity\": isValid(datum[\"kind of economic activity\"]) ? datum[\"kind of economic activity\"] : \"\"+datum[\"kind of economic activity\"], \"GDP (RM Million)\": format(datum[\"sum_value rm million\"], \",.0f\"), \"Year\": isValid(datum[\"year\"]) ? datum[\"year\"] : \"\"+datum[\"year\"]}"
          },
          "ariaRoleDescription": {"value": "bar"},
          "description": {
            "signal": "\"Sum of value rm million: \" + (format(datum[\"sum_value rm million\"], \"\")) + \"; state: \" + (isValid(datum[\"state\"]) ? datum[\"state\"] : \"\"+datum[\"state\"]) + \"; kind of economic activity: \" + (isValid(datum[\"kind of economic activity\"]) ? datum[\"kind of economic activity\"] : \"\"+datum[\"kind of economic activity\"]) + \"; State: \" + (isValid(datum[\"state\"]) ? datum[\"state\"] : \"\"+datum[\"state\"]) + \"; Kind of Activity: \" + (isValid(datum[\"kind of economic activity\"]) ? datum[\"kind of economic activity\"] : \"\"+datum[\"kind of economic activity\"]) + \"; GDP (RM Million): \" + (format(datum[\"sum_value rm million\"], \",.0f\")) + \"; Year: \" + (isValid(datum[\"year\"]) ? datum[\"year\"] : \"\"+datum[\"year\"])"
          },
          "x": {"scale": "x", "field": "sum_value rm million_end"},
          "x2": {"scale": "x", "field": "sum_value rm million_start"},
          "y": {"scale": "y", "field": "state"},
          "height": {"signal": "max(0.25, bandwidth('y'))"}
        }
      }
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "linear",
      "domain": {
        "data": "data_0",
        "fields": ["sum_value rm million_start", "sum_value rm million_end"]
      },
      "range": [0, {"signal": "width"}],
      "nice": true,
      "zero": true
    },
    {
      "name": "y",
      "type": "band",
      "domain": {
        "data": "source_0",
        "field": "state",
        "sort": {
          "op": "sum",
          "field": "value rm million",
          "order": "descending"
        }
      },
      "range": [0, {"signal": "height"}],
      "paddingInner": 0.1,
      "paddingOuter": 0.05
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "data": "source_0",
        "field": "kind of economic activity",
        "sort": {
          "op": "sum",
          "field": "value rm million",
          "order": "descending"
        }
      },
      "range": [
        "#56B4E9", 
        "#E69F00",  
        "#009E73",  
        "#F0E442", 
        "#0072B2",  
        "#D55E00",  
        "#CC79A7"   
      ]
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "gridScale": "y",
      "grid": true,
      "tickCount": {"signal": "ceil(width/40)"},
      "domain": false,
      "labels": false,
      "aria": false,
      "maxExtent": 0,
      "minExtent": 0,
      "ticks": false,
      "zindex": 0
    },
    {
      "scale": "x",
      "orient": "bottom",
      "grid": false,
      "title": "GDP (RM Million)",
      "labelFlush": true,
      "labelOverlap": true,
      "tickCount": {"signal": "ceil(width/40)"},
      "zindex": 0
    },
    {
      "scale": "y",
      "orient": "left",
      "grid": false,
      "title": "State",
      "zindex": 0
    }
  ],
  "legends": [
    {
      "direction": "vertical",
      "labelLimit": 300,
      "orient": "right",
      "title": "Kind of Economic Activity",
      "fill": "color",
      "symbolType": "square"
    }
  ],
  "config": {
    "axis": {"labelFontSize": 11, "titleFontSize": 12},
    "legend": {"titleFontSize": 12, "labelFontSize": 11},
    "style": {"cell": {"stroke": null}}
  }
}
