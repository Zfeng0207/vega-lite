{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "background": "white",
  "padding": 5,
  "width": 900,
  "height": 400,
  "title": {
    "text": "Malaysia GDP by Economic Activity (2019â€“2022)",
    "frame": "group"
  },
  "style": "view",
  "data": [
    {
      "name": "source_0",
      "url": "https://raw.githubusercontent.com/Zfeng0207/vega-lite/refs/heads/main/data/gdp_cleaned.csv",
      "format": {
        "type": "csv",
        "parse": {"year": "number", "value rm million": "number"},
        "delimiter": ","
      },
      "transform": [
        {"type": "filter", "expr": "datum.year == year_select"},
        {
          "type": "filter",
          "expr": "isValid(datum['value rm million']) && isFinite(+datum['value rm million'])"
        },
        {
          "type": "joinaggregate",
          "as": ["kind_total"],
          "ops": ["sum"],
          "fields": ["value rm million"],
          "groupby": ["kind of economic activity"]
        },
        {
          "type": "joinaggregate",
          "as": ["grand_total"],
          "ops": ["sum"],
          "fields": ["value rm million"]
        }
      ]
    },
    {
      "name": "data_0",
      "source": "source_0",
      "transform": [
        {
          "type": "aggregate",
          "groupby": ["kind of economic activity", "grand_total"],
          "ops": ["sum"],
          "fields": ["value rm million"],
          "as": ["value_kind"]
        },
        {
          "type": "formula",
          "expr": "datum.value_kind / datum.grand_total * 100",
          "as": "pct_total_kind"
        },
        {
          "type": "stack",
          "groupby": [],
          "field": "value_kind",
          "sort": {
            "field": ["kind of economic activity"],
            "order": ["ascending"]
          },
          "as": ["value_kind_start", "value_kind_end"],
          "offset": "zero"
        },
        {
          "type": "filter",
          "expr": "isValid(datum['value_kind']) && isFinite(+datum['value_kind'])"
        }
      ]
    },
    {
      "name": "data_1",
      "source": "source_0",
      "transform": [
        {
          "type": "aggregate",
          "groupby": [
            "kind of economic activity",
            "sub kind of economic activity",
            "kind_total",
            "grand_total"
          ],
          "ops": ["sum"],
          "fields": ["value rm million"],
          "as": ["value_sub"]
        },
        {
          "type": "formula",
          "expr": "datum.value_sub / datum.kind_total * 100",
          "as": "pct_parent_sub"
        },
        {
          "type": "formula",
          "expr": "datum.value_sub / datum.grand_total * 100",
          "as": "pct_total_sub"
        },
        {
          "type": "stack",
          "groupby": [],
          "field": "value_sub",
          "sort": {
            "field": ["kind of economic activity", "value_sub"],
            "order": ["ascending", "ascending"]
          },
          "as": ["value_sub_start", "value_sub_end"],
            "offset": "zero"
        },
        {
          "type": "filter",
          "expr": "isValid(datum['value_sub']) && isFinite(+datum['value_sub'])"
        }
      ]
    }
  ],

  "signals": [
    {
      "name": "year_select",
      "value": 2022,
      "bind": {
        "input": "range",
        "min": 2019,
        "max": 2022,
        "step": 1,
        "name": "Year: "
      }
    }
  ],

  "marks": [
    {
      "name": "layer_0_marks",
      "type": "arc",
      "style": ["arc"],
      "from": {"data": "data_0"},
      "encode": {
        "update": {
          "stroke": {"value": "white"},
          "strokeWidth": {"value": 1},
          "innerRadius": {"value": 80},
          "outerRadius": {"value": 160},
          "fill": {"scale": "color", "field": "kind of economic activity"},
          "tooltip": {
            "signal": "{\"Kind\": datum['kind of economic activity'], \"GDP (RM Million)\": format(datum['value_kind'], ',.0f'), \"% of Total\": format(datum['pct_total_kind'], '.1f')}"
          },
          "x": {"signal": "width", "mult": 0.5},
          "y": {"signal": "height", "mult": 0.5},
          "startAngle": {"scale": "theta", "field": "value_kind_end"},
          "endAngle": {"scale": "theta", "field": "value_kind_start"}
        }
      }
    },
    {
      "name": "layer_1_marks",
      "type": "arc",
      "style": ["arc"],
      "from": {"data": "data_1"},
      "encode": {
        "update": {
          "stroke": {"value": "white"},
          "strokeWidth": {"value": 0.8},
          "innerRadius": {"value": 160},
          "outerRadius": {"value": 260},
          "fill": {"scale": "color", "field": "kind of economic activity"},
          "opacity": {"scale": "opacity", "field": "value_sub"},
          "tooltip": {
            "signal": "{\"Kind\": datum['kind of economic activity'], \"Sub Kind\": datum['sub kind of economic activity'], \"GDP (RM Million)\": format(datum['value_sub'], ',.0f'), \"% of Parent\": format(datum['pct_parent_sub'], '.1f'), \"% of Total\": format(datum['pct_total_sub'], '.1f')}"
          },
          "x": {"signal": "width", "mult": 0.5},
          "y": {"signal": "height", "mult": 0.5},
          "startAngle": {"scale": "theta", "field": "value_sub_end"},
          "endAngle": {"scale": "theta", "field": "value_sub_start"}
        }
      }
    }
  ],

  "scales": [
    {
      "name": "theta",
      "type": "linear",
      "domain": {
        "fields": [
          {"data": "data_0", "field": "value_kind_start"},
          {"data": "data_0", "field": "value_kind_end"},
          {"data": "data_1", "field": "value_sub_start"},
          {"data": "data_1", "field": "value_sub_end"}
        ]
      },
      "range": [0, 6.283185307179586],
      "zero": true
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": [
        "Agriculture",
        "Mining and Quarrying",
        "Manufacturing",
        "Construction",
        "Services",
        "Plus: Import duties"
      ],
      "range": [
        "#1b9e77",
        "#d95f02",
        "#7570b3",
        "#e7298a",
        "#66a61e",
        "#e6ab02"
      ]
    },
    {
      "name": "opacity",
      "type": "linear",
      "domain": [0, 200000],
      "range": [0.45, 1],
      "zero": true
    }
  ],

  "legends": [
    {
      "title": "Kind of Economic Activity",
      "fill": "color",
      "orient": "right",
      "symbolType": "circle",
      "symbolSize": 300,
      "symbolStrokeWidth": 2,
      "padding": 12,
      "titleFontSize": 18,
      "titleFont": "Inter",
      "titlePadding": 8,
      "labelFont": "Inter",
      "labelFontSize": 14,
      "labelLimit": 240,
      "encode": {
        "title": {
          "update": {"fontWeight": {"value": "600"}}
        },
        "labels": {
          "update": {"fill": {"value": "#222"}}
        },
        "symbols": {
          "update": {"stroke": {"value": "white"}}
        }
      }
    }
  ],

  "config": {
    "style": {
      "cell": {"stroke": null},
      "arc": {"cornerRadius": 0}
    }
  }
}
